

{
    "version": "0.2.0",
    "configurations": [
        


        {
            "name": "Python: Pytest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-s",
                "-v",
                "${workspaceFolder}"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopOnEntry": false,
            "justMyCode": false,
            "python": "${command:python.interpreterPath}"
        }
    ]
}